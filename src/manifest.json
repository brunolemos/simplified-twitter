{
  "manifest_version": 2,
  "name": "Simplified Twitter",
  "version": "1.0.1",
  "description": "Make the New Twitter cleaner by removing the right column and making the menu smaller",
  "short_name": "Simplified Twitter",
  "permissions": ["tabs"],
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["https://twitter.com/*", "https://mobile.twitter.com/*"],
      "js": ["index.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
