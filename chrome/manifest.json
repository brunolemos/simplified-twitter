{
  "manifest_version": 2,
  "name": "Simplified Twitter/X",
  "version": "1.8.1",
  "description": "Remove distractions from the new Twitter/X layout",
  "short_name": "Simplified Twitter/X",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*",
        "https://mobile.twitter.com/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "index.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  }
}